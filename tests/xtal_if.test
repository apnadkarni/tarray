# xtal if stmt tests

source [file join [file dirname [info script]] testutil.tcl]

namespace eval tarray::test {
    test xtal-if-1.0 { Simple if false} -setup {
        set x 0 ; set y 0
    } -body {
        xtal::xtal { if x {y = 1} }
    } -result ""
    
    test xtal-if-1.1 { Simple if true} -setup {
        set x 1; set y 1
    } -body {
        xtal::xtal { if x {y = 1} }
    } -result 1

    test xtal-if-1.2 { Simple if expr block with multiple statements} -setup {
        set x 1; set y 2
    } -body {
        xtal::xtal {
            if x < y {
                x = x *2
                y = x + y
            }
        }
    } -result 4
    
    test xtal-if-2.0 { if-else true block with multiple statements} -setup {
        set x 1; set y 2
    } -body {
        xtal::xtal {
            if x < y && x == 1 {
                x = x *2
                y = x + y
            } else {
                x = x * 3 ; y = x + y
            }
        }
    } -result 4
    
    test xtal-if-2.1 { if-else true block with multiple statements} -setup {
        set x 1; set y 2
    } -body {
        xtal::xtal {
            if x > y && x == 1 {
                x = x *2
                y = x + y
            } else {
                x = x * 3 ; y = x + y
            }
        }
    } -result 5
    
    test xtal-if-3.0 {if - missing expr} -body {
        xtal::xtal { if {y = 1} }
    } -result "Parse error*" -match glob -returnCodes error
    
    test xtal-if-3.1 {if - missing expr} -body {
        xtal::xtal { if () {y = 1} }
    } -result "Parse error*" -match glob -returnCodes error
    
    test xtal-if-3.2 {if - missing clause} -body {
        xtal::xtal { if (x)}
    } -result "Parse error*" -match glob -returnCodes error
    
    test xtal-if-3.3 {if - missing else body} -body {
        xtal::xtal { if () {y = 1} else }
    } -result "Parse error*" -match glob -returnCodes error
    
    test xtal-if-3.4 {if - missing else keyword} -body {
        xtal::xtal { if (x) {y = 1} {}}
    } -result "Parse error*" -match glob -returnCodes error

    test xtal-if-3.5 { if-elseif missing expression } -setup {
        set x 1
    } -body {
        xtal::xtal {
            if x > 0 {
                z = 'if'
            } elseif {
                z = 'elseif'
            } else {
                z = 'else'
            }
        }
    } -result "Parse error*" -match glob -returnCodes error

    test xtal-if-4.0 { if-elseif-else true } -setup {
        set x 1
    } -body {
        xtal::xtal {
            if x < 2 {
                z = 'if'
            } elseif x < 3 {
                z = 'elseif'
            } elseif (x < 4) {
                z = 'elseif2'
            } else {
                z = 'else'
            }
        }
    } -result if

    test xtal-if-4.1 { if-elseif-else true } -setup {
        set x 2
    } -body {
        xtal::xtal {
            if x < 2 {
                z = 'if'
            } elseif x < 3 {
                z = 'elseif'
            } elseif (x < 4) {
                z = 'elseif2'
            } else {
                z = 'else'
            }
        }
    } -result elseif
    
    test xtal-if-4.2 { if-elseif-else true } -setup {
        set x 3
    } -body {
        xtal::xtal {
            if x < 2 {
                z = 'if'
            } elseif x < 3 {
                z = 'elseif'
            } elseif (x < 4) {
                z = 'elseif2'
            } else {
                z = 'else'
            }
        }
    } -result elseif2
    
    test xtal-if-4.3 { if-elseif-else true } -setup {
        set x 4
    } -body {
        xtal::xtal {
            if x < 2 {
                z = 'if'
            } elseif x < 3 {
                z = 'elseif'
            } elseif (x < 4) {
                z = 'elseif2'
            } else {
                z = 'else'
            }
        }
    } -result else

    test xtal-if-4.4 { if-elseif true } -setup {
        set x 4
    } -body {
        xtal::xtal {
            if x < 4 {
                z = 'if'
            } elseif x < 5 {
                z = 'elseif'
            }
        }
    } -result elseif
    
    test xtal-if-4.4 { if-elseif true } -setup {
        set x 4; set z ""
    } -body {
        xtal::xtal {
            if x < 4 {
                z = 'if'
            } elseif x > 4 {
                z = 'elseif'
            }
        }
    } -result ""

    test xtal-if-5.0 { Nested if-elseif} -setup {
        set x 4; set y 4; set z 0
    } -body {
        xtal::xtal {
            if x < 5 {
                if y < 5 {
                    z = 1
                } else {
                    z = 2
                }
            } elseif (x < 10)  {
                if y < 10 {
                    z = 3
                } else {
                    z = 4
                }
            } else {
                if y < 20 {
                    z = 5
                } else {
                    z = 6
                }
            }
            z
        }
    } -result 1

    test xtal-if-5.1 { Nested if-elseif} -setup {
        set x 9; set y 11; set z 0
    } -body {
        xtal::xtal {
            if x < 5 {
                if y < 5 {
                    z = 1
                } else {
                    z = 2
                }
            } elseif (x < 10)  {
                if y < 10 {
                    z = 3
                } else {
                    z = 4
                }
            } else {
                if y < 20 {
                    z = 5
                } else {
                    z = 6
                }
            }
            z
        }
    } -result 4
    
    test xtal-if-5.2 { Nested if-elseif} -setup {
        set x 11; set y 19; set z 0
    } -body {
        xtal::xtal {
            if x < 5 {
                if y < 5 {
                    z = 1
                } else {
                    z = 2
                }
            } elseif (x < 10)  {
                if y < 10 {
                    z = 3
                } else {
                    z = 4
                }
            } else {
                if y < 20 {
                    z = 5
                } else {
                    z = 6
                }
            }
            z
        }
    } -result 5
    
    test xtal-if-5.3 { Nested if-elseif} -setup {
        set x 11; set y 21; set z 0
    } -body {
        xtal::xtal {
            if x < 5 {
                if y < 5 {
                    z = 1
                } else {
                    z = 2
                }
            } elseif (x < 10)  {
                if y < 10 {
                    z = 3
                } else {
                    z = 4
                }
            } else {
                if y < 20 {
                    z = 5
                }
            }
            z
        }
    } -result 0
    
}

::tcltest::cleanupTests
